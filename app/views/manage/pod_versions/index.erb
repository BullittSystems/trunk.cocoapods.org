<% @title = 'Pod Versions' %>

<h2>Versions</h2>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Pod</th>
      <th>Version</th>
      <th>Commits</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <% @versions.each do |version| %>
      <tr>
        <% [version.id, version.pod.name, version.name, version.commits_dataset.count, version.created_at.to_formatted_s(:rfc822), version.updated_at.try(:to_formatted_s, :rfc822)].each do |value| %>
          <td><%= value || 'n/a' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
