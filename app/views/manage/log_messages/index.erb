<% @title = 'Log Messages' %>

<h2>Log Messages</h2>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created At</th>
      <th>Level</th>
      <th>Message</th>
      <th>Pod</th>
      <th>Version</th>
    </tr>
  </thead>
  <tbody>
    <% @log_messages.each do |message| %>
      <tr class="<%= message.level %>">
        <!-- TODO Rename message.message to message.text. -->
        <% [message.id, message.created_at.to_formatted_s(:rfc822), message.level, message.message, message.pod_version.pod.name, message.pod_version.name].each do |value| %>
          <td><%= value || 'n/a' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
