#!/usr/bin/env ruby

$:.unshift(File.expand_path('../../', __FILE__))

require 'config/init'
require 'app/models/submission_job'

loop do
  Pod::TrunkApp::SubmissionJob.update_travis_build_statuses!

  if Pod::TrunkApp::SubmissionJob.perform_task!
    slept += sleep(0.1)
  else
    slept += sleep(1)
  end
end
